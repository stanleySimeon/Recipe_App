<div class="container px-0 flex justify-center items-center pt-16">
  <div class="md:card w-full md:mt-12 md:w-4/12 h-auto backdrop-blur-2 bg-white rounded shadow-lg p-2">
    <div class="w-full h-auto py-2 border-b border-grayLight mb-6">
      <h2 class="text-center md:text-start text-primary">Log In</h2>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.label :email%><br />
      <%= f.email_field :email, autofocus: false, placeholder: "johndoe@gmail.com", class: "w-full mt-2 pl-2 mb-3 border-grayLight rounded" %>
      <%= f.label :password %><br />
      <%= f.password_field :password, placeholder: "********", class: "w-full mt-2 pl-2 mb-2 border-grayLight rounded"  %>
    <% if devise_mapping.rememberable? %>
      <div class="flex gap-2 items-center">
        <%= f.check_box :remember_me%>
        <%= f.label :remember_me, class: "text-skyBlue" %>
      </div>
    <% end %>
    <div class="flex justify-start mt-4 space-x-4 mb-3 md:mt-6 lg:mb-8">
      <button class="btn btn-primary inline-flex items-center py-2 px-4 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
        <%= f.submit "Submit" %>
      </button>
      <button class="btn inline-flex items-center py-2 px-4 text-sm font-medium text-center rounded-lg focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 border border-primary">
        <%= link_to "Sign up", new_registration_path(resource_name), class: "text-decoration-none text-primary" %>
      </button>
    </div>
    <% end %>
  </div>
</div>
